<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="https://github.com/whistyun/Markdown.Avalonia">

    <!--
        Markdown.Avalonia 样式配置
        注意：某些控件属性可能不可设置，此文件提供基本样式覆盖
    -->

    <!-- H1 标题样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Heading1">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,24,0,16" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H2 标题样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Heading2">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,20,0,12" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H3 标题样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Heading3">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,16,0,10" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H4 标题样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Heading4">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,12,0,8" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H5 标题样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Heading5">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,10,0,6" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- H6 标题样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Heading6">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,8,0,4" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <!-- 段落样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="22" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- 代码块样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.CodeBlock">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,8,0,16" />
    </Style>

    <!-- 行内代码样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.InlineCode">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="4,2" />
    </Style>

    <!-- 代码文本样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Code">
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New, monospace" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- 引用块样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.BlockQuote">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="4,0,0,0" />
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="0,8,0,16" />
    </Style>

    <!-- 列表样式 -->
    <Style Selector="md|MarkdownScrollViewer ItemsControl">
        <Setter Property="Margin" Value="0,4,0,12" />
    </Style>

    <!-- 水平分隔线样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.ThematicBreak">
        <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="Margin" Value="0,16,0,16" />
    </Style>

    <!-- 链接样式 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Hyperlink">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="md|MarkdownScrollViewer TextBlock.Hyperlink:pointerover">
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>

    <!-- 表格样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.Table">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Margin" Value="0,8,0,16" />
    </Style>

    <!-- 表格单元格样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.TableCell">
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
    </Style>

    <!-- 表格标题行样式 -->
    <Style Selector="md|MarkdownScrollViewer Border.TableHeader">
        <Setter Property="Background" Value="{StaticResource BackgroundAltBrush}" />
    </Style>

    <!-- 强调文本 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Emphasis">
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <!-- 加粗文本 -->
    <Style Selector="md|MarkdownScrollViewer TextBlock.Strong">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

</Styles>
